
<h1>New Bookmark for <%= @list.name %></h1>

<%= form_with(model: [@list, @bookmark], local: true) do |form| %>
  <% if @bookmark.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h4>
      <ul>
        <% @bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :movie_id, "Movie ID" %>
    <%= form.text_field :movie_id, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Create Bookmark', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary' %>

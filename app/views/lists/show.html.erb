<div class="header">
  <h1><%= @list.name %></h1>
</div>
<div class="add-movie">
  <%= link_to 'add a bookmark', new_list_bookmark_path(@list), class: "btn btn-success" %>
</div>

<div class="movies-list">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-6">
        <div class="card movie-card">
          <%= image_tag bookmark.movie.poster_url, class: "movie-poster" %>
          <div class="card-body">
            <h5 class="card-title">
              <%= bookmark.movie.title %> • <%= bookmark.movie.rating %> ⭐
            </h5>
            <p class="card-text">
              <%= bookmark.movie.overview %>
            </p>
            <p class="card-comment">
              “<%= bookmark.comment %>”
            </p>
            <%= link_to 'delete', @list,  data: { turbo_method: :delte, turbo_confirm: 'Are you sure?' }, class: "delete-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
